<h1>参加者一覧ページ</h1>

<table border=1>
  <thead>
    <tr>
      <th>Userid</th>
    <!--  <th>Eventid</th>
      <th>Status</th>  -->
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @join_events.each do |join_event| %>

    
    <tr>
        <td><%= join_event.user_id %></td>
        <td><%= join_event.event_id %></td>
        <!--<td><%= join_event.status %></td>  -->
        <td><%= join_event.comment %></td>
        <td><%= link_to '詳細', join_event %></td>
        <td><%= link_to '編集', edit_join_event_path(join_event) %></td>

       <td><%= link_to '削除', join_event, method: :delete, data: { confirm: 'Are you shure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

